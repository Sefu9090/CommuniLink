<div class="container">
    <div class="section">
      <div class ="m8 s8"> 
        <h2>Add an Event</h2>
        <form method="post" action="/openDataEvents">
              <p>Event:<input class="input "type="text" name="event_name"  required><br></p>
              <p>Type of event:<input class="input "type="text" name="type_of_event"  required><br></p>
              <p>Date of event:<input class="input "type="text" name="event_date_time_start"  required><br></p>
              <p>Time of event:<input class="input "type="text" name="information_website"  required><br></p>
              <p>Subject of Event:<input class="input "type="text" name="subject_matter"  required><br></p>
          <input class="btn btn-primary" type="submit">
        </form>
      </div>
    </div>
  </div>  
  
  <div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
      <div class="container">
        <div class="row center">
          <h1 class="header col s12 light"> LA Open Data Activites  </h1>
        </div>
      </div>
    </div>
    <div class="parallax"><img src="https://s3-us-west-2.amazonaws.com/find-a-grave-prod/photos/2015/245/5237_1441291404.jpg" alt="Unsplashed background img 3"><h1></h1></div>
  </div>

      <div class="row">
          <% @results.each_with_index do |item, index|  %>
            <% date = item["event_date_time_start"] %>          
          <% if (date.length > 12) %>
            <% new_date = date[0...10] %>
            <% time = item["event_date_time_start"] %>
            <% time = date[11...16] %>
          <% else %>
            <% new_date = date %> 
            <% time = "unsure!" %>            
          <% end %>            
          <% if (index < @numberOfEvents) %>
            <div class="col s4 m3">
              <div class="card medium blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title"><%= item["event_name"]%></span>
                  <p>This event is a <%= item["type_of_event"] %>.</p>
                  <p> This event took place on <%= new_date %>.</p>
                  <p> Time: <%= time %> </p>
                  
                  <p>The subject matter is <%= item["subject_matter"]%>. </p>
                  
                </div>
                <div class="card-action">
                  <hr />
                  <a href=<%= item["information_website"]%> > Information Website</a>
                </div>
              </div>
            </div>
          <% end %>            
        <% end %>
        <div class="center">
        <form method="post" action="/openDataEventsAdd">
          <button class="waves-effect waves-light btn-large"> Click For More Events! <i class="material-icons">trending_up</i> </button>
        </form>
        </div>
      </div>
